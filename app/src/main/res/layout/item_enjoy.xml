<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/viewBg"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/imgbox_enjoy"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1_enjoy"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <ImageView
                    android:id="@+id/img2_enjoy"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <ImageView
                    android:id="@+id/img3_enjoy"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_enjoy"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_below="@+id/imgbox_enjoy"
                android:textColor="@color/enjoy"
                android:textSize="30dp"
                android:text="1234"/>

            <TextView
                android:id="@+id/content_enjoy"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_below="@+id/title_enjoy"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:text="1234" />

        </RelativeLayout>


</LinearLayout>